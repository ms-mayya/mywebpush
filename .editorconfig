# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8


[*.{js,ts,tsx,jsx,mdx,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false


[*.{js,ts,tsx,jsx,mdx}]
quote_type = single